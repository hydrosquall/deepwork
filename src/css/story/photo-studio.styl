//------PHOTO STUDIO
.photo-studio-holder
	width:100%
	height: 100%
	overflow: hidden
	//PLACEHOLDER TODO
	.button-holder
		position: absolute
		bottom: 3rem
		width: 100%
		text-align: center
		color: red


.photo-studio-container
	display: flex
	flex-flow: column
	height: 100%
	position: relative
	top: 0px
	transition: top 1s
	h3
		text-align: center
		margin-top: 0


.photo-studio-main
	background: url(none) no-repeat center center 
	background-size: cover
	width: 100%
	aspect-ratio: 1 / 1
	border-radius: $border-rad $border-rad 0px 0px

.photo-studio-controls
	border-radius: 0px 0px $border-rad $border-rad
	datalist
		display: flex
		font-family: 'DM Sans', sans-serif
		justify-content: space-between
		set-type-size(small, true)
		font-weight: 500
		option
			font-weight: 500
	input[type=range]
		width: 100%
		margin: 0px;
		padding: 0px;

.photo-grid
	width: 100%
	display: flex
	margin-bottom:0.5rem
	> div
		background: url(none) no-repeat center center 
		background-size: cover
		aspect-ratio: 1 / 1
		display:block
		&.selected-pic
			position: relative
			&:before
				content: ''
				border: 2px solid black
				width: 100%
				height: 100%
				display: block
				position: absolute
				left: -2px
				top: -2px