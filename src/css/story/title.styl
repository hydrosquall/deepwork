.title-holder
    &:after
        content: ""
        display: table
        clear: both
    height: 45px
    margin-bottom: 5rem
    margin-top: 7.5rem
    +mq('bp-4')
        height: auto
        text-align: center
    img
        height: 100%
        width: auto
        margin-right: 0.5rem
        +mq('bp-4')
            margin: 0 auto 0.5rem auto
    img, div
        float: left
        +mq('bp-4')
            float: none
    h1
        set-type-size(x-large, false)
        padding: 0px
        margin: 0px
        font-family: 'DM Sans', sans-serif
        font-weight: 400
        span
            display: inline
        +mq('bp-4')
            margin: 0 auto 0.125rem auto
    p
        font-family: $atlas
        padding: 0px
        margin: 0px
        set-type-size(x-small, false)
        opacity: 60%
    a
        text-decoration: none
        border: none
        color: initial

.banner-click
    cursor: pointer