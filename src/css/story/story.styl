/* CUSTOM STORY STYLE */

h2
	set-type-size(xx-large, true)
p
	font-family: sans-serif

.all-caps
	text-transform: uppercase

#content
	max-width: 65rem
	margin:0 auto
	padding: 0 25px

.story-block
	margin-top: 5rem
	p:first-of-type
		text-transform: uppercase
		font-size: 14px
		set-type-size(small, false)