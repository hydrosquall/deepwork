/* CUSTOM STORY STYLE */
*
	box-sizing: border-box

h2
	set-type-size(xx-large, true)
p
	font-family: sans-serif

.all-caps
	text-transform: uppercase

#content
	max-width: 65rem
	margin:0 auto
	padding: 0 25px

.story-block
	margin-top: 5rem
	p:first-of-type
		text-transform: uppercase
		set-type-size(small, false)
	display: block
	+mq('bp-4')
		display: grid
		grid-template-columns: 300px auto
		grid-template-areas: "pic text"
		.story-text
			grid-area: text
		.story-pic
			grid-area: pic
