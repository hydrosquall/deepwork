<div class="menu-item">
	<div class="menu-item-wrapper">
		<div class="price-holder">
			<h3 class="package all-caps">{{content.title}}</h3>
			<p class="price">$29</p>
			<p class="duration">/month</p>
		</div>
		<div class="menu-pic">
			<img src="assets/images/{{illustration}}"/>
		</div>
		<div class="menu-descrip">
			{{#if content.lead.0.link}}
				<p>{{{removeLink content.lead.0.text content.lead.0.link}}}</p>
			{{else}}
				<p>{{content.lead.0.text}}</p>
			{{/if}}
		</div>
		<div class="menu-button">
			<div>
				<a class="all-caps" href="#{{which}}-package">Read More</a>
			</div>
		</div>
	</div>
</div>