<section>
	<div class="single-col">
		{{#if content.title}}
			<h3>{{content.title}}</h3>
		{{/if}}
		{{#each content.content}}
			{{> story/escape-link this }}
		{{/each}}
		<button role="button" class="toggler closed pic-info" aria-expanded="false" aria-controls="photo-credits">
			<img src="assets/images/svgs/chevron-right.svg" alt=""/>
			<p>
				<span class="phrase">Show</span>
				<span> stock photo credits</span>
			</p>
		</button>
		<div class="toggled single-col closed pic-info" id="photo-credits">
			<ul class="bulleted">
				{{#each content.list}}
					<li>
						<span class="heavier">
						{{#if this.link}}
							<a href={{this.link}} target="_blank">{{this.name}}</a>
						{{else}}
							{{this.name}}
						{{/if}}
						</span>
						by {{this.credit}}
					</li>
				{{/each}}
			</ul>
		</div>
	</div>
</section>